#include
int seconds = 0;
int aleatorio;
int lista[10];
int leds[] = {13,8};

LiquidCrystal lcd_1(12, 11, 7, 6, 5, 4);
void setup()
{
pinMode(2, INPUT_PULLUP);
pinMode(10, INPUT_PULLUP);
pinMode(9, INPUT_PULLUP);
pinMode(3, OUTPUT);
pinMode(13, OUTPUT);
pinMode(8, OUTPUT);

lcd_1.begin(16, 2);

lcd_1.print("hello world!");
Serial.begin(9600);
}

void geraSequencia(){
for(int i=0; i < 10; i++){
aleatorio = random(2);
lista[i] = aleatorio;
digitalWrite(leds[aleatorio], 1);
delay(1000);
digitalWrite(leds[aleatorio], 0);
delay(1000);
}
}

int verificaLed(){
int verifica=0;
int iterador=0;
int i;
while(iterador < 10){
if(!digitalRead(10)){
verifica= 0;
i = verificaSeq(verifica, iterador);
if (!i){
return 0;
}
iterador++;
digitalWrite(13, 1);
delay(1000);
digitalWrite(13, 0);
}
else if(!digitalRead(9)){
verifica= 1;
i = verificaSeq(verifica, iterador);
if (!i){
return 0;
}
iterador++;
digitalWrite(8, 1);
delay(1000);
digitalWrite(8, 0);
}
}
return 1;
}

int verificaSeq(int verifica, int iterador){
if(verifica == lista[iterador]){
return 1;
}
else {
return 0;
}
}

void loop()
{
if (!digitalRead(2)){
geraSequencia();
int resolucao = verificaLed();
Serial.println(resolucao);
}
}

